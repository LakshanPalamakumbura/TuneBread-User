<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDetails">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003360"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Account Details"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rtl_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="40dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginTop="20dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Name :"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtChangeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Dilshan Jayasekara"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtChangeName"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/txtRegConfPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Email :"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtChangeEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="130susith@gmail.com"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtChangeEmail"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/txtNICL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="NIC :"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtRegPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="962660142V"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtRegPassword"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout3"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Mobile:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="0766414584"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtMobileNumber"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout4"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/VehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Vehicle Type:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtVehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Car"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtVehicleType"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout5"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/VehicleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Vehicle Number:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtVehicleNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="CNA - 8090"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtVehicleNumber"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout6"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/fromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="From Date:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtfromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="24/11/2021"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtfromDate"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout7"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/toDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="To Date:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="25/11/2021"
                        android:textColor="@color/accout_settings_buttons"
                        android:textSize="13sp" />

                    <View
                        style="@style/Divider"
                        android:layout_below="@id/txtToDate"
                        android:layout_marginTop="10dp"
                        android:alpha="0.3" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/round_button_logout"
                    android:text="Ok"
                    android:textColor="@color/sign_up_edit_texts_tint_text_headings"
                    tools:ignore="TextContrastCheck" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>